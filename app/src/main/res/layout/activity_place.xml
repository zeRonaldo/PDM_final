<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PlaceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/imgBGRestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:gravity="bottom"
           >
            <ImageView
                android:id="@+id/imgRestaurant"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                />
            <TextView
                android:id="@+id/tvPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do restaurante"
                android:textSize="26dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/tvPlaceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/tvPlaceDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distância"
                android:textSize="16dp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvOpenHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aberto até XXh"
            android:textAlignment="center"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <RatingBar
                android:id="@+id/rbRating"
                android:theme="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                />
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="35dp"
                android:text="4.5"
                android:textAlignment="center"/>

        </LinearLayout>
        <Button
            android:id="@+id/btGoPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:text="Ir Para XXXXX"/>
        <Button
            android:id="@+id/btCallPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:text="Ligar para XXXX"/>
    </LinearLayout>
</LinearLayout>